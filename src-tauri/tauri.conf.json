{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nano Client",
  "version": "1.2.0",
  "identifier": "com.nanoclient.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Nano Client",
        "width": 1100,
        "height": 680,
        "minWidth": 900,
        "minHeight": 580,
        "decorations": true,
        "transparent": false,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "rpm",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}